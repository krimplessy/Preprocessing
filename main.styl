body
	background-color #164B69
	font-size 16px
	font-family Arial
.main-block
	width 80%
	//min-width 700px
	//min-height 700px
	margin 40px auto
	padding 10px 30px
	background-color #E3E3E3
	color black
.menu
	display flex
	flex-direction row
	justify-content space-around
	width 100%
	padding 10px 0px
	//border solid grey 1px
	&_item
		width 16%
		padding 10px
		font-weight bold
		text-align center
		//white-space nowrap
		//border solid thin black
		&:hover
			background-color #DCDCDC
.page
	background-color #DCDCDC
a
	text-decoration none
	color black
	&:hover
		color #00BFFF
p
	text-indent 30px
	text-align justify
	line-height 2em
	word-spacing 1.5em
@media(max-width:600px)
		body
			font-size 14px
		.main-block
			width 90%
		.menu
			flex-wrap wrap
			&_item
				width 50%

.CSS
	.block1
		display flex
		flex-direction column
		padding 10px
		img
			float right
			margin 0px 10px 10px 10px
	.block2
		display flex
		//border solid thin black
		flex-direction row
		justify-content space-around
		margin 10px
		video
			width 40%
			//border solid thick grey
	@media(max-width:600px)
		.block1
			text-align center
			flex-direction column
			&-item2
				img
					float none
					width 90%
					padding 15px
		.block2
			flex-direction column
			align-items center
			video
				width 85%
				//border solid thick grey

.Shrift
	.block1
		display flex
		flex-direction row
		width 100%
		text-align center
		margin 15px 0px
		&-item
			width 33.33%
			//border solid thin red
	img
		width 90%
	.block2
		padding 10px
	.block3
		padding 10px
	@media(max-width:600px)
		.block1
			flex-direction column
			align-items center
			&-item
				width 100%
				padding 10px

.Block
	.block1
		display flex
		flex-direction row
		width 100%
		text-align center
		margin 15px 0px
		&-item
			width 25%
	img
		width 95%
	ul
		text-indent 10px
		text-align justify
		line-height 2em
		word-spacing 1.5em
	.block2
		display block
		width 100%
		margin 15px 0px
		//border solid thin black
		overflow hidden
		&-item1
			display inline-block
			width 50%
			float left
			padding 30px 30px 10px 30px
			//border solid thin black
		&-item2
			display inline-block
			width 50%
			padding 30px 30px 10px 30px
	.block3
		display block
		width 100%
		padding 0px 20px
		//border solid thin black
	@media (max-width: 600px)
		.block1
			flex-direction column
			align-items center
			&-item
				width 100%
				padding 10px
		.block2
			display flex
			flex-direction column
			width 100%
			&-item1
				width 100%
				padding 10px 20px
			&-item2
				width 100%
				padding 10px 20px